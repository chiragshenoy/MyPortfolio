<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chiragshenoy.myportfolio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyPortfolioApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.SpotifyStreamerMovieListingActivity"
            android:label="Popcorn Times"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".Activities.MovieDetailsActivity"
            android:label="Movie Listing"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>


</manifest>
