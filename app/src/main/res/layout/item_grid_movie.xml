<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/movie_card_bottom_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivMovieThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:transitionName="@string/movie_poster_transition" />

            <TextView
                android:id="@+id/tvMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_grid_text_view_height"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/ivMovieThumbnail"
                android:gravity="center"
                android:textColor="@color/solid_black" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>